<div class="w-full header flex items-center justify-between">
    <%= link_to user_category_path(user_id: current_user.id, id: @category.id) do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h1 class="text-center mb-2">New Transaction</h1>
  <div></div>
  </div>
<%= form_with(model: [@category, @entity], url: user_category_entities_path(user_id: current_user.id, category_id: @category.id), local: true) do |form| %>
  <%= form.hidden_field :category_id %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "w-full h-4" %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "w-full h-4" %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Entity' %>
  </div>
<% end %>
